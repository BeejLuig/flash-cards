<h2>New folder</h2>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for :folder do |f| %>

      <div class="form-group">
        <%= f.label "name"%>
        <%= f.text_field :name, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.collection_check_boxes :study_set_ids, StudySet.all, :id, :title do |b| %>
          <%= b.label %>
          <%= b.check_box %> <br>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.submit "Create folder", class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
