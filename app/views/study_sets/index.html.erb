<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">Flash Cards</h1>
    <p class="lead">Browse user-generated flash cards or create your own</p>
  </div>
</div>
<div class="container">
  <div class="row">
  <div class="col-md-12">
    <div class="search-bar">
      <%= form_tag(root_path, method: "get", id: "search-form") do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], class: "form-control" %>
        <span class="input-group-btn">
          <%= submit_tag "Search", name: nil, class: "btn btn-default"%>
        </span>
      </div><!-- /input-group -->
      <%end%>
    </div><!-- /.search-bar -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->
  <div class="row">
    <% if @study_sets.blank? %>
      <p>Sorry, no study sets were found!</p>
      <p>Try again or go <%= link_to "back",  root_path%></p>
    <% end %>
    <div class="col-md-4">
        <% @study_sets.each_with_index do |set, i| %>
          <% if i % 3 == 0 %>
            <%= render :partial => 'study_sets', locals: { study_set: set } %>
          <% end %>
        <% end %>
    </div>
    <div class="col-md-4">
      <% @study_sets.each_with_index do |set, i| %>
        <% if i % 3 == 1 %>
          <%= render :partial => 'study_sets', locals: { study_set: set } %>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-4">
      <% @study_sets.each_with_index do |set, i| %>
        <% if i % 3 == 2 %>
          <%= render :partial => 'study_sets', locals: { study_set: set } %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
