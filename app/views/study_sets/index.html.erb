<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">Flash Cards</h1>
    <p class="lead">Browse user-generated flash cards or create your own</p>
  </div> <!-- container -->
</div> <!-- jumbotron -->

<div id="sets"></div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="search-bar">
        <%= form_tag(root_path, method: "get", id: "search-form") do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class: "form-control" %>
          <span class="input-group-btn">
          <%= submit_tag "Search", name: nil, class: "btn btn-default"%>
        </span>
        </div><!-- /input-group -->
      <%end%>
    </div><!-- /.search-bar -->
  </div><!-- /.col-md-12 -->
</div><!-- /.row -->

  <div class="row">
    <%= render :partial => "study_set_list", locals: {study_sets: @study_sets} %>
  </div><!-- row -->
</div><!-- container -->

